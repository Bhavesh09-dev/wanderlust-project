<% layout('/layouts/boilerplate') -%>

    <body>

        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Listing details</h3>
            </div>

            <div class="card col-6 offset-2 show-card">
                <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing image">
                <div class="card-body">

                    <p class="card-text">
                        <b><%= listing.title %></b> <br>
                        <%= listing.description %>
                        <li>&#8377 <%= listing.price.toLocaleString("en-IN") %>
                        <%= listing.location %>
                        <%= listing.country %>

                    </p>

                </div>
            </div>
        </div>


        <div class="btns">
            <a href="/listings/<%=listing._id %>/edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit</a>

        
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-4 ">Delete</button>
            </form>


        </div>
            
            
     
       
        


    </body>